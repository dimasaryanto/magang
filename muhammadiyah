apiVersion: apps/v1 
kind: Deployment 
metadata: 
  name: muh-login-diy 
  namespace: muh-diy 
  labels: 
    app: muh-diy 
spec: 
  replicas: 1 
  selector: 
    matchLabels: 
      app: muh-diy 
  template: 
    metadata: 
      labels: 
        app: muh-diy 
    spec: 
      containers: 
      - name: muhammadiyah:latest 
        image: 131100/muhammadiyah
      - containerPort: 80
        Protocol: TCP
---
apiVersion: v1
kind: Service
metadata:
  name: sipcemerlang-svc
  namespace: sicermat-test
spec:
  type: ClusterIP
  ports:
  - port: 80
  selector:
    app: sipcemerlang
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: sipcemerlang-ing
  namespace: sicermat-test
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
  - host: cemerlang.test.geschool.id
    http:
      paths:
      - pathType: Prefix
        path: /
        backend:
          service:
            name: sipcemerlang-svc
            port:
              number: 80
