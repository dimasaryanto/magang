apiVersion: apps/v1
kind: Deployment
metadata:
  name: muhdiy
  namespace: muh-diy
  labels:
    app: muhdiy
spec:
  replicas: 1
  selector:
    matchLabels:
      app: muhdiy
  template:
    metadata:
      labels:
        app: muhdiy
    spec:
      containers:
      - name: muhdiy
        image: 131100/muhammadiyah
---
apiVersion: v1
kind: Service
metadata:
  name: muhdiy-svc
  namespace: muh-diy
spec:
  type: ClusterIP
  ports:
  - port: 80
  selector:
    app: muhdiy
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: muhdiy-ing
  namespace: muh-diy
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
  - host: muh-diy.test.geschool.id
    http:
      paths:
      - pathType: Prefix
        path: /
        backend:
          service:
            name: muhdiy-svc
            port:
              number: 80
