apiVersion: apps/v1
kind: Deployment
metadata:
  name: sipcemerlang
  namespace: sicermat-test
  labels:
    app: sipcemerlang
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sipcemerlang
  template:
    metadata:
      labels:
        app: sipcemerlang
    spec:
      containers:
      - name: sipcemerlang
        image: valentinusdimas/sipcemerlang
---
apiVersion: v1
kind: Service
metadata:
  name: sipcemerlang-svc
  namespace: sicermat-test
spec:
  type: ClusterIP
  ports:
  - port: 80
  selector:
    app: sipcemerlang
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: sipcemerlang-ing
  namespace: sicermat-test
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
  - host: cemerlang.test.geschool.id
    http:
      paths:
      - pathType: Prefix
        path: /
        backend:
          service:
            name: sipcemerlang-svc
            port:
              number: 80
